package poker;

public class Carta {
  
  private String strPalo;
  private String strValor;
  private int iValor;
  /* *
   * 
   * @param n
   */
  
  public Carta(int n) {
    int ipalo = n + 1 / 13;
    switch (ipalo) {
      case 0:
        strPalo = "Diamantes";
        break;
      case 1:
           strPalo="Picas";
           break;
       case 2:
           strPalo="Tréboles";
           break;
           default:
           strPalo="Corazones";
        
                   }
   iValor=n % 13 + 1;
    if (iValor == 11) {
      strValor = "Jota";
    }
    if (iValor == 12) {
      strValor = "Dama";
    }
    if (iValor == 13) {
      strValor = "Rey";
    }
    if (iValor == 1) {
      strValor = "As";
      iValor = 14;
    } else {
      strValor = String.valueOf(iValor);
    }
  }
  
  @Override
  public String toString() {
    return strValor + " de " + strPalo;
  }
  
  public int getValorNumerico() {
    return iValor;
  }
  
  public String getValor() {
    return strValor;
  }
  
  public String getPalo() {
    return strPalo;
  }
}
