package poker;

// TODO: Auto-generated Javadoc
/**
 * The Class Carta.
 */
public class Carta {

  /** The str palo. */
  private String strPalo;
  
  /** The str valor. */
  private String strValor;
  
  /** The ivalor. */
  private int ivalor;

  /**
   * Instantiates a new carta.
   *
   * @param n the n
   */
  public Carta(int n) {
    int ipalo = n / 13;
    switch (ipalo) {
      case 0:
        strPalo = "Diamantes";
        break;
      case 1:
        strPalo = "Picas";
        break;
      case 2:
        strPalo = "Tr√©boles";
        break;
      default:
        strPalo = "Corazones";

    }
    ivalor = n % 13 + 1;
    switch (ivalor) {
      case 11:
        strValor = "Jota";
        break;
      case 12:
        strValor = "Reina";
        break;
      case 13:
        strValor = "Rey";
        break;
      case 1:
        strValor = "As";
        break;
      default:
        strValor = String.valueOf(ivalor);
    }
  }

  /* (non-Javadoc)
   * @see java.lang.Object#toString()
   */
  @Override
  public String toString() {
    return strValor + " de " + strPalo;
  }

  /**
   * Gets the valor numerico.
   *
   * @return the valor numerico
   */
  public int getValorNumerico() {
    return ivalor;
  }

  /**
   * Gets the valor.
   *
   * @return the valor
   */
  public String getValor() {
    return strValor;
  }

  /**
   * Gets the palo.
   *
   * @return the palo
   */
  public String getPalo() {
    return strPalo;
  }
}
