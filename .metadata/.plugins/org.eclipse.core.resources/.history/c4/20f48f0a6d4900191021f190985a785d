package poker;

import java.util.ArrayList;
import java.util.Collections;
import java.util.List;

//import java.util.*;

/**
 * The Class Baraja.
 */
public class Baraja {
  private List<Carta> cartas;
  
  /**
   * Crea las 52 cartas de la baraja.
   *
   * @Baraja es el constructor
   */
  
  public Baraja() {
    cartas = new ArrayList<Carta>();
    for (int i = 0; i < 52; i++) {
      cartas.add(new Carta(i));
    }
  }
  
  public void mezclarBaraja() {
    Collections.shuffle(cartas);
  }
  
  /**
   * robarCarta es un mÃ©todo que devuelve una carta del array que obtiene por remove
   *
   */
  
  public Carta robarCarta() throws FinBarajaException {
    Carta c;
    try {
      c = cartas.remove(0);
      return c;
    } catch (IndexOutOfBoundsException ex) {
      throw new FinBarajaException();
    }
   
  }
}
