package poker;

/* *
 * Esta clase lanza a consola el método robar carta
 * @author: Pilar
 * @version: 14-3-2019
 * @see Markdown donde pongo antes y después
 */
public class Poker { 
  /* * 
   * Saca por pantalla el resultado de robarCarta
   * @param b La coordenada x del centro del círculo.
   * @param b1 La coordenada y del centro del círculo.
   * @param r El radio del círculo. Debe ser mayor o igual a 0.
   */
  
  public static void main(String[] args) {
    try {
      Baraja b = new Baraja();
      for (int i = 0; i < 52; i++) {
        System.out.println(b.robarCarta());
      }
      System.out.println();
      Baraja b1 = new Baraja();
      b1.mezclarBaraja();
      for (int i = 0; i < 52;i++) {
        System.out.println(b1.robarCarta());
      }
      System.out.println();
    } catch (Exception ex) {
      System.out.println(ex);
    }
  }
}
